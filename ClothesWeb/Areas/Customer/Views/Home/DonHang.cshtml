@model IEnumerable<HoaDon>

<main class="main">
  <div class="page-content" style="color:#000f">
    <div class="cart">
      <div class="container">
        <div class="row">
          <aside class="col-lg-3 aside-color">
            <div class="user-info mb-10">
              <div class="d-flex align-items-center mb-10 mt-10">
                <img class="mr-10" src="~/assets/img/client_2.png" alt="User Avatar">
                <p class="mb-1">@ViewBag.Name</p>
              </div>
              <!-- Tài khoản của tôi -->
              <div class="user-links d-flex flex-column p-2">
                <div class="d-flex align-items-center">
                  <i class="fa fa-user-circle"></i>
                  <a asp-controller="Home" asp-action="TaiKhoan" class="btn__donhang">Tài khoản của tôi</a>
                </div>
                <div class="d-flex align-items-center">
                  <i class="fa fa-book"></i>
                  <a asp-controller="Home" asp-action="DonHang" class="btn__donhang">Đơn mua</a>
                </div>
                <div class="d-flex align-items-center">
                  <i class="fa fa-bell"></i>
                  <a href="#" class="btn__donhang">Thông báo</a>
                </div>
              </div>
            </div>

            <a asp-controller="Home" asp-action="Product_List" class="btn btn-outline-dark btn-block mt-10 mb-3" style="padding: 24px 20px;">
              <span style="font-size: 16px;">CONTINUE SHOPPING</span>
            </a>
          </aside><!-- End .col-lg-3 -->
          @if (Model.Any())
          {
            <div class="col-lg-9">
              <h3 class="m-4 text-center">Đơn hàng</h3>
              <table class="table">
                <thead>
                  <tr>
                    <th>Đơn hàng</th>
                    <th>Thành tiền</th>
                    <th>Trạng thái</th>
                    <th>Ngày đặt</th>
                    <th></th>
                  </tr>
                </thead>
                @foreach (var item in Model)
                {
                  <tbody>
                    <tr>
                      <td>@item.Name</td>
                      <td>@String.Format("{0:0,0}", @item.TotalPrice) VND</td>
                      <td>@item.OrderStatus</td>
                      <td>@item.OrderDate</td>
                      <td>
                        <div style="width: auto; height: 40px; background-color: #ee4d2d; padding: 20px; font-size: 14px;" class="d-flex align-items-center justify-content-center">
                          <a class="btn-block text-center" asp-action="DonhangDetails" asp-route-id="@item.Id">Chi tiết</a>
                        </div>
                      </td>
                    </tr>
                  </tbody>
                }
              </table>
            </div>
          }
          else
          {
            <div>
              <h1>No Product</h1>
            </div>
          }
        </div><!-- End .row -->
      </div><!-- End .container -->
    </div><!-- End .cart -->
  </div><!-- End .page-content -->
</main><!-- End .main -->
