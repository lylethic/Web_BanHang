@model Cart

@{
  Layout = "";
}

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Dashboard</title>
  <link rel="shortcut icon" type="image/png" href="~/assets_admin/images/logos/favicon.png" />
  <link rel="stylesheet" href="~/assets_admin/css/styles.min.css" />
  <link href="Content/sweetalert/sweet-alert.css" rel="stylesheet" />

  <style>
    .truncate-text {
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      max-width: 200px;
    }
  </style>
</head>
<body>
  <!--  Body Wrapper -->
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
       data-sidebar-position="fixed" data-header-position="fixed">
    <!-- Sidebar Start -->
    <aside class="left-sidebar">
      <!-- Sidebar scroll-->
      <div>
        <div class="brand-logo d-flex align-items-center justify-content-center">
          <a asp-controller="Admin" asp-action="Dashboard" class="text-nowrap logo-img d-flex align-items-center justify-content-between">
            <img src="~/assets_admin/images/logos/favicon.png" alt="" />
            <div class="text-black" style="font-size: 1.5rem; margin-left: 1rem; font-weight: 700; color: rgba(93, 135, 255, 0.85) !important;">Admin</div>
          </a>
          <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
            <i class="ti ti-x fs-8"></i>
          </div>
        </div>
        <!-- Sidebar navigation-->
        <nav class="sidebar-nav scroll-sidebar" data-simplebar="">
          <ul id="sidebarnav">
            <li class="nav-small-cap">
              <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
              <span class="hide-menu">Home</span>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" asp-controller="Admin" asp-action="Dashboard" aria-expanded="false">
                <span>
                  <i class="ti ti-layout-dashboard"></i>
                </span>
                <span class="hide-menu">Dashboard</span>
              </a>
            </li>
            <li class="nav-small-cap">
              <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
              <span class="hide-menu">SẢN PHẨM</span>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" asp-controller="Admin" asp-action="AdminProducts" aria-expanded="false">
                <span>
                  <i class="ti ti-article"></i>
                </span>
                <span class="hide-menu">Trang sản phẩm</span>
              </a>
            </li>
            <!-- SỬA TẠI ĐÂY -->
            <li class="sidebar-item">
              <a class="sidebar-link" asp-controller="Admin" asp-action="AddProducts" aria-expanded="false">
                <span>
                  <i class="ti ti-alert-circle"></i>
                </span>
                <span class="hide-menu">Thêm sản phẩm</span>
              </a>
            </li>
            <li class="nav-small-cap">
              <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
              <span class="hide-menu">Tài khoản</span>
            </li>
            <li class="sidebar-item">
              <a class="sidebar-link" asp-controller="Admin" asp-action="UserAccount" aria-expanded="false">
                <span>
                  <i class="ti ti-user-circle"></i>
                </span>
                <span class="hide-menu">Quản lý tài khoản User</span>
              </a>
            </li>
          </ul>
        </nav>
        <!-- End Sidebar navigation -->
      </div>
      <!-- End Sidebar scroll-->
    </aside>
    <!--  Sidebar End -->
    <!--  Main wrapper -->
    <div class="body-wrapper">
      <!--  Header Start -->
      <header class="app-header">
        <nav class="navbar navbar-expand-lg navbar-light">
          <ul class="navbar-nav">
            <li class="nav-item d-block d-xl-none">
              <a class="nav-link sidebartoggler nav-icon-hover" id="headerCollapse" href="javascript:void(0)">
                <i class="ti ti-menu-2"></i>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link nav-icon-hover" href="javascript:void(0)">
                <i class="ti ti-bell-ringing"></i>
                <div class="notification bg-primary rounded-circle"></div>
              </a>
            </li>
          </ul>
          <div class="navbar-collapse justify-content-end px-0" id="navbarNav">
            <ul class="navbar-nav flex-row ms-auto align-items-center justify-content-end">
              <li class="nav-item dropdown">
                <a class="nav-link nav-icon-hover" href="javascript:void(0)" id="drop2" data-bs-toggle="dropdown"
                   aria-expanded="false">
                  <img src="~/assets_admin/images/profile/user-1.jpg" alt="" width="35" height="35" class="rounded-circle">
                </a>
                <div class="dropdown-menu dropdown-menu-end dropdown-menu-animate-up" aria-labelledby="drop2">
                  <div class="message-body">
                    <a href="javascript:void(0)" class="d-flex align-items-center gap-2 dropdown-item">
                      <i class="ti ti-user fs-6"></i>
                      <p class="mb-0 fs-3">My Profile</p>
                    </a>
                    <a href="javascript:void(0)" class="d-flex align-items-center gap-2 dropdown-item">
                      <i class="ti ti-mail fs-6"></i>
                      <p class="mb-0 fs-3">My Account</p>
                    </a>
                    <a href="javascript:void(0)" class="d-flex align-items-center gap-2 dropdown-item">
                      <i class="ti ti-list-check fs-6"></i>
                      <p class="mb-0 fs-3">My Task</p>
                    </a>
                    <a asp-controller="Admin" asp-action="Login" class="btn btn-outline-primary mx-3 mt-2 d-block">Logout</a>
                  </div>
                </div>
              </li>
            </ul>
          </div>
        </nav>
      </header>
      <!--  Header End -->
      <div class="container-fluid">
        <form method="post">
          <div class="container mt-5 mb-5">
            <div class="row d-flex justify-content-center">
              <div class="col-md-12">
                <div class="card">
                  <div class="row">
                    <div class="col-md-6">
                      <div class="images p-3">
                        <a class="text-center p-4">
                          <img id="main-image" src="@Model.Product.ImageUrl" width="350" />
                        </a>
                        <div class="thumbnail text-center">
                          <img onclick="change_image(this)" src="@Model.Product.ImageUrl" width="100">
                          <img onclick="change_image(this)" src="@Model.Product.ImageUrl" width="100">
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="product p-4">
                        <div class="d-flex justify-content-between align-items-center">

                          @*Back to Shop page*@
                          <div class="d-flex align-items-center">
                            <a class="text-black-50" asp-area="Owner" asp-controller="Admin" asp-action="Dashboard">
                              <span class="ml-1">
                                <i class="fa-solid fa-arrow-left fs-10"></i>
                                Back
                              </span>
                            </a>
                          </div>
                          @*End Back to Shop page*@
                          <i class="fa fa-shopping-cart text-muted"></i>
                        </div>
                        <div class="mt-4 mb-3">
                          <span class="text-uppercase text-muted brand">Orianz</span>
                          <h5 class="text-uppercase">@Model.Product.Name</h5>
                          <div class="price d-flex flex-row align-items-center">
                            <span class="act-price">
                              @*$@Model.Product.Price*@
                              @String.Format("{0:0,0}", Model.Product.Price) đ
                            </span>
                            <div class="ml-2"> <small class="dis-price">$100</small> <span>80% OFF</span> </div>
                          </div>
                        </div>
                        <p class="about">@Model.Product.Description</p>

                        <div class="cart mt-4 align-items-center product-details-action">
                          <a class="btn btn-danger text-uppercase mr-2 px-4" asp-controller="Admin" asp-action="Upsert" asp-route-id="@Model.ProductId">
                              <span>Cập nhật</span>
                            @*<button type="submit" class="btn btn-danger text-uppercase mr-2 px-4">
                            </button>*@
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    function Xoa(id, row) {
      $.ajax({
        url: `/Owner/Admin/Delete/${id}`,
        type: "POST",
        success: function (data) {
          // Loại bỏ phần tử sản phẩm khỏi DOM
          row.closest("#box").remove();
          confirmDelete();
        },
      })
    }

    function confirmDelete() {
      Swal.fire({
        title: 'Are you sure?',
        text: "You won't be able to revert this!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!'
      }).then((result) => {
        if (result.isConfirmed) {
          // Perform the action for creating a new item here.
          Swal.fire(
            'Deleted!',
            'Your file has been deleted.',
            'success'
          )
        }
      });
    }
  </script>

  <script src="~/assets_admin/libs/jquery/dist/jquery.min.js"></script>
  <script src="~/assets_admin/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/assets_admin/js/sidebarmenu.js"></script>
  <script src="~/assets_admin/js/app.min.js"></script>
  <script src="~/assets_admin/libs/apexcharts/dist/apexcharts.min.js"></script>
  <script src="~/assets_admin/libs/simplebar/dist/simplebar.js"></script>
  <script src="~/assets_admin/js/dashboard.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>

</html>