@model Product
@{
  Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
  <title>CSS Template</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppđJzQIu9"
        crossorigin="anonymous">
  <title>Loai</title>
</head>
<body style="font-size: 18px">
  <div class="container-md p-4 mt-5 m-auto  border shadow">
    <h3 class="text-center">Thêm mới sản phẩm</h3>
    <form method="post" asp-action="Upsert" class="">
      <input type="hidden" asp-for="IdProduct" />

      <div class="form-group">
        <label asp-for="Name">Tên sản phẩm</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Name"></span>
      </div>

      <div class="form-group">
        <label asp-for="Description">Mô tả</label>
        <input type="text" asp-for="Description" class="form-control" />
        <span class="text-danger" asp-validation-for="Description"></span>
      </div>

      <div class="form-group">
        <label asp-for="Price">Giá</label>
        <input type="text" asp-for="Price" class="form-control" />
        <span class="text-danger" asp-validation-for="Price"></span>
      </div>

      <div class="form-group">
        <label asp-for="ImageUrl">Hình ảnh</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <span class="text-danger" asp-validation-for="ImageUrl"></span>
      </div>

      <div class="form-group">
        <label asp-for="LoaiId">Loại sản phẩm</label>
        <select asp-for="LoaiId" asp-items="@ViewBag.Dstheloai" class="form-control">
          <option disabled>Chọn loại sản phẩm</option>
        </select>
        <span class="text-danger" asp-validation-for="LoaiId"></span>
      </div>

      <div class="form-group mt-2">
        <button type="submit" class="btn btn-warning">@(Model.IdProduct == 0 ? "Tạo mới" : "Cập nhật")</button>
        <a asp-action="AdminProducts" class="btn btn-secondary">Hủy</a>
      </div>
    </form>
  </div>

  @section Scripts{
    @{
      <partial name="_ValidationScriptsPartial" />
    }
  }
</body>
</html>