  <script>
    function Xoa(id, row) {
      // Store the ID of the item to be deleted in a variable
      var itemId = id;

      // Open a confirmation dialog using SweetAlert
      Swal.fire({
        title: 'Are you sure?',
        text: "You won't be able to revert this!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes'
      }).then((result) => {
        if (result.isConfirmed) {
          // If confirmed, send an AJAX request to delete the item
          $.ajax({
            url: `/Owner/Admin/Delete/${itemId}`,
            type: "POST",
            success: function (data) {
              // Remove the item from the DOM upon successful deletion
              row.closest("#box").remove();
              // Show a success message using SweetAlert
              Swal.fire(
                'Deleted!',
                'Your file has been deleted.',
                'success'
              )
            },
          })
        } else {
          // If cancelled, show a cancellation message using SweetAlert (optional)
          Swal.fire(
            'Cancelled',
            'Your action has been cancelled :)',
            'error'
          )
        }
      });
    }
  </script>

