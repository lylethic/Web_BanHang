@model IEnumerable<ChiTietHoaDon>

@{
  Layout = "_LayoutAdmin";
  Pager pager = new Pager();
  int pageNo = 0;
  if (ViewBag.Pager != null)
  {
    pager = ViewBag.Pager;
    pageNo = pager.CurentPage;
  }
}

<div class="container container-box">
  <div class="w-100 container-card">
    <div class="col-lg-10 mt-5">
      <div class="card rounded shadow border-0">
        <div class="card-body p-5 bg-white rounded">
          <div class="table-responsive">
            @if (Model != null && Model.Any())
            {
              <div class="container">
                <div class="p-4 bg-light-info">
                  <h4 class="text-left">Thông tin khách hàng</h4>
                  <div class="text-left fs-3">
                    <div style="padding: 10px 0 4px 10px; background-color: #f5f5f5; " class="d-flex align-items-center justify-content-start">
                      <div class="me-2">Tên khách hàng: </div>
                      <div>@ViewBag.Name</div>
                    </div>
                    <hr />
                    <div style="padding: 10px 0 4px 10px; background-color: #f5f5f5;" class="d-flex align-items-center justify-content-start">
                      <div>Địa chỉ: </div>
                      <div class="form-inline">@ViewBag.Address</div>
                    </div>
                    <hr />
                    <div style="padding: 10px 0 4px 10px; background-color: #f5f5f5; " class="d-flex align-items-center justify-content-start">
                      <div>Số điện thoại: </div>
                      <div>@ViewBag.PhoneNumber</div>
                    </div>
                    <hr />
                    <div style="padding: 10px 0 4px 10px; background-color: #f5f5f5; " class="d-flex align-items-center justify-content-start">
                      <div>Ghi chú: </div>
                      <div>@ViewBag.GhiChu</div>
                    </div>
                    <hr />
                    <div style="padding: 10px 0 4px 10px; background-color: #f5f5f5; " class="d-flex align-items-center justify-content-start">
                      <div>Tình trạng đơn hàng: </div>
                      <div>@ViewBag.OrderStatus</div>
                    </div>
                  </div>
                </div>
                <hr />
                <h2 class="text-center m-4">Chi tiết đơn hàng</h2>
                <hr />
                <table class="table table-bordered" style="font-size: 16px;">
                  <thead class="text-center">
                    <tr>
                      <th></th>
                      <th>Tên sản phẩm</th>
                      <th>Số lượng</th>
                      <th>Giá tiền</th>
                    </tr>
                  </thead>
                  <tbody class="text-center">
                    @foreach (var item in Model)
                    {
                      <tr>
                        <td><img style="width: 80px; height: 80px;" src="@item.ImgURL" alt="Product Image"></td>
                        <td class="text-start">@item.ProductName</td>
                        <td>@item.Quantity</td>
                        <td>@String.Format("{0:0,0}", item.ProductPrice)</td>
                      </tr>
                    }
                  </tbody>
                </table>
                <div class="container">
                  <hr />
                  <div class="form-control m-2">
                    <div style="color: red; font-size: 20px; text-align: end;">
                      <label class="form-label text-uppercase" style="font-size: 14px; color: #000;">Phí giao hàng:</label>
                      <span style="font-weight: 700;">@String.Format("{0:0,0}", 32000)</span>
                    </div>
                    <hr />
                    <div style="color: red; font-size: 20px; text-align: end;">
                      <label class="form-label text-uppercase" style="font-size: 14px; color: #000;">Thành tiền:</label>
                      <span style="font-weight: 700;">@String.Format("{0:0,0}", @ViewBag.Total)</span>
                    </div>
                  </div>
                  <span><a asp-controller="DonHang" asp-action="Index" class="btn btn-outline-primary">Quay về</a></span>
                </div>
              </div>
            }
            else
            {
              <h3>Không có sản phẩm.</h3>
            }
            @*<div class="container">
                @if (pager.TotalPages > 0)
                {
                  <ul class="pagination justify-content-center">
                    @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                    {
                      <li class="page-item @(pge == pager.CurentPage ? "active" : "")">
                        <a class="page-link" asp-controller="DonHang"
                           asp-action="Index"
                           asp-route-page="@pge">@pge</a>
                        </li>
                      }
                  </ul>
                }
              </div>*@
          </div>
        </div>
      </div>
    </div>
  </div>
</div>